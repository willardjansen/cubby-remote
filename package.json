{
  "name": "cubby-remote",
  "version": "1.8.0",
  "author": {
    "name": "Willard Jansen",
    "email": "willardjansen@me.com"
  },
  "description": "Articulation switcher for Cubase users",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0 --port 7100",
    "build": "next build",
    "start": "next start --hostname 0.0.0.0 --port 7100",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "midi": "node midi-server.js",
    "all": "npm run midi & npm run dev",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:7100 && electron .\"",
    "electron:build": "node build-electron.js",
    "electron:pack": "node build-electron.js --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "jzz": "^1.9.6",
    "midi": "^2.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webmidi": "^3.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  }
}